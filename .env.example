# Used by Taskfile.yml (dotenv: [ .env ])
# Copy to .env and fill values locally.
# IMPORTANT: do not commit real tokens.

# Yandex Wiki API base URL (fixed by docs)
YANDEX_WIKI_BASE_URL=https://api.wiki.yandex.net

# Yandex Tracker API base URL
YANDEX_TRACKER_BASE_URL=https://api.tracker.yandex.net

# Yandex Cloud Organization ID for X-Cloud-Org-Id header
# Get via: yc organization-manager organization list
YANDEX_CLOUD_ORG_ID=

# Token refresh period in hours (default 10).
# The token adapter will refresh the IAM token after this period.
YANDEX_IAM_TOKEN_REFRESH_PERIOD=10

# HTTP timeout in seconds for API requests (default 30).
# Controls how long the HTTP client will wait for a response from Yandex APIs.
YANDEX_HTTP_TIMEOUT=30

# Allowed attachment extensions (comma-separated, no dots).
# Fully replaces the default allowlist.
# Example: txt,json,pdf,tar.gz
YANDEX_MCP_ATTACH_EXT=

# Allowed attachment extensions for inline viewing (comma-separated, no dots).
# Fully replaces the default text allowlist.
# Example: txt,json,yaml,md,csv,tsv,rtf
YANDEX_MCP_ATTACH_VIEW_EXT=

# Allowed attachment directories (comma-separated, absolute paths).
# Fully replaces the default directory rules.
# Example: /Users/me/attachments,/Users/me/tmp
YANDEX_MCP_ATTACH_DIR=
